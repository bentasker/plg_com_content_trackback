<?xml version="1.0" encoding="utf-8"?>
<extension 

version="1.6" type="plugin" group="content" method="upgrade">

	<name>Com_content - RPC Ping Plugin</name>
	<author>B Tasker</author>
	<creationDate>Jan 31 2013</creationDate>
	<copyright>Copyright (C) 2013 B Tasker / 2013 Virya Technologies</copyright>
	<authorEmail>support@viryatechnologies.com</authorEmail>
	<authorUrl>www.viryasoftware.com</authorUrl>
	<version>1.0.1</version>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin allows you to RPC Pings whenever you update your content</description>
	<files>
		<filename plugin="rpcping">rpcping.php</filename>
	</files>
	
	<config>
	
	
	<fields name="params">
	
	      <fieldset name="basic">
		<field name="enabledServices" multiple="true" type="list" label="Enabled Ping Servers" description="The plugin will send a RPC ping to the selected servers whenever a page is first viewed after an update">
			<option value="google">Google</option>
			<option value="yahoo">Yahoo</option>
			<option value="technorati">Technorati</option>
			<option value="yandex">Yandex</option>
			
		</field>
		
		
		
		
		
		
	      </fieldset>
	</fields>
	
	</config>
</extension>
